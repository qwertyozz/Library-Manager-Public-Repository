<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBooks">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewAddBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto__medium"
            android:text="Add Book"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageView
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/textViewAddBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/textViewAddBooks"
            android:id="@+id/textInputLayoutTitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/title"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Title"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/textInputLayoutTitle"
            android:id="@+id/textInputLayoutAuthor"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/author"
            app:errorEnabled="true"
            app:endIconMode="clear_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Author"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/textInputLayoutAuthor"
            android:id="@+id/textInputLayoutPublisher"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/publisher"
            app:errorEnabled="true"
            app:endIconMode="clear_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Publisher"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/textInputLayoutPublisher"
            android:id="@+id/textInputLayoutYear"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/year"
            app:errorEnabled="true"
            app:endIconMode="clear_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Year"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/textInputLayoutYear"
            android:id="@+id/textInputLayoutGenre"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/genre"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Genre"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/textInputLayoutGenre"
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="Add"
            android:textStyle="bold"/>

        <Button
            android:backgroundTint="#FFC107"
            android:layout_below="@+id/button_add"
            android:id="@+id/button_clear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="Clear"
            android:textStyle="bold"/>

    </RelativeLayout>




</ScrollView>